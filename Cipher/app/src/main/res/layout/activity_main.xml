<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/btn_enc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/enc_desc"
        android:textStyle="bold"
        android:backgroundTint="#7C7171"
        app:layout_constraintStart_toStartOf="@+id/et_main"
        app:layout_constraintTop_toBottomOf="@+id/et_main" />

    <TextView
        android:id="@+id/tv_enc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/btn_enc"
        app:layout_constraintTop_toBottomOf="@+id/btn_enc"
        tools:text="암호"/>

    <Button
        android:id="@+id/btn_dnc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/dec_desc"
        android:textStyle="bold"
        android:backgroundTint="#7C7171"
        app:layout_constraintStart_toStartOf="@+id/et_main"
        app:layout_constraintTop_toBottomOf="@+id/tv_enc" />

    <TextView
        android:id="@+id/tv_dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/btn_enc"
        app:layout_constraintTop_toBottomOf="@+id/btn_dnc"
        tools:text="암호"/>

</androidx.constraintlayout.widget.ConstraintLayout>