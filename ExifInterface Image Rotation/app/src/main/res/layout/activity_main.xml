<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_main1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/original_desc"
        android:textSize="15dp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_main1"
        android:layout_width="0dp"
        android:layout_height="280dp"
        android:background="@drawable/shape_border"
        android:layout_marginHorizontal="5dp"
        android:visibility="invisible"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_main1"/>

    <TextView
        android:id="@+id/tv_main2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modify_desc"
        android:textSize="15dp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_main1"/>

    <ImageView
        android:id="@+id/iv_main2"
        android:layout_width="0dp"
        android:layout_height="280dp"
        android:background="@drawable/shape_border"
        android:visibility="invisible"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_main2"/>

    <Button
        android:id="@+id/btn_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_desc"
        android:textStyle="bold"
        android:backgroundTint="#715252"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_main2" />



</androidx.constraintlayout.widget.ConstraintLayout>