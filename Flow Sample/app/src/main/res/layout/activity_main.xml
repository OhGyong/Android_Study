<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity">

        <TextView
            android:id="@+id/tv_cold_title"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cold_flow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.37"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4" />

        <TextView
            android:id="@+id/tv_cold"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            app:layout_constraintStart_toEndOf="@id/tv_cold_title"
            app:layout_constraintTop_toTopOf="@id/tv_cold_title"
            tools:text="name" />

        <TextView
            android:id="@+id/tv_hot_title"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hot_flow"
            app:layout_constraintTop_toBottomOf="@id/tv_cold_title"
            app:layout_constraintStart_toStartOf="@id/tv_cold_title" />

        <TextView
            android:id="@+id/tv_hot"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            app:layout_constraintTop_toBottomOf="@id/tv_cold"
            app:layout_constraintStart_toEndOf="@id/tv_hot_title"
            tools:text="name" />

        <include
            android:id="@+id/in_insert"
            layout="@layout/item_insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@+id/in_update"
            app:layout_constraintTop_toBottomOf="@+id/tv_hot" />

        <include
            android:id="@+id/in_delete"
            layout="@layout/item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/in_update"
            app:layout_constraintTop_toBottomOf="@+id/in_insert" />

        <include
            android:id="@+id/in_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/in_delete"
            layout="@layout/item_update" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>